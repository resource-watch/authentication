{
  "name": "authorization",
  "version": "1.5.0",
  "description": "Authorization service for the RW API.",
  "repository": "https://github.com/resource-watch/authorization",
  "main": "index.js",
  "scripts": {
    "coverage": "nyc ts-mocha -b --project tsconfig.json -r tsconfig-paths/register --timeout 20000 'test/**/*.ts' --exit",
    "test": "ts-mocha -b --project tsconfig.json -r tsconfig-paths/register --timeout 20000 'test/**/*.ts' --exit",
    "start": "ts-node --files --project tsconfig.json -r tsconfig-paths/register src/index.ts",
    "watch": "ts-node-dev --respawn --transpile-only --files --project tsconfig.json -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "prepare": "husky install"
  },
  "keywords": [
    "authorization",
    "twitter",
    "koa2",
    "rw",
    "nodejs"
  ],
  "author": {
    "name": "Vizzuality",
    "email": "hello@vizzuality.com",
    "url": "https://vizzuality.com/"
  },
  "license": "MIT",
  "engines": {
    "node": "~16.15"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "*.test.*"
    ],
    "include": [
      "src/**"
    ],
    "reporter": [
      "text-summary",
      "lcov"
    ],
    "reportDir": "coverage",
    "all": true
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bunyan": "^1.8.6",
    "@types/chai": "^4.2.14",
    "@types/chai-datetime": "^0.0.36",
    "@types/chai-http": "^4.2.0",
    "@types/chai-string": "^1.4.2",
    "@types/config": "^0.0.37",
    "@types/faker": "^5.1.5",
    "@types/jsonapi-serializer": "^3.6.5",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa": "2.13.1",
    "@types/koa-generic-session": "^1.0.5",
    "@types/koa-joi-router": "^8.0.4",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-mount": "^4.0.0",
    "@types/koa-passport": "^4.0.3",
    "@types/koa-qs": "^2.0.0",
    "@types/koa-redis": "^4.0.0",
    "@types/koa-router": "^7.4.4",
    "@types/koa-views": "^2.0.4",
    "@types/lodash": "^4.14.165",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.6",
    "@types/passport-facebook-token": "^0.4.35",
    "@types/passport-http": "^0.3.9",
    "@types/passport-twitter": "^1.0.37",
    "@types/pem-jwk": "^1.5.0",
    "@types/sinon": "^9.0.9",
    "@types/sleep": "^0.0.8",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "chai": "^4.3.7",
    "chai-datetime": "^1.8.0",
    "chai-http": "^4.3.0",
    "chai-string": "^1.5.0",
    "eslint": "^8.27.0",
